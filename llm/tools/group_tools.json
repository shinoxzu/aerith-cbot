{
  "tools": [
    {
      "type": "function",
      "function": {
        "name": "change_chat_description",
        "description": "Меняет описание чата",
        "strict": true,
        "parameters": {
          "type": "object",
          "required": ["description", "accessor_user_id"],
          "properties": {
            "description": {
              "type": "string",
              "description": "Новое описание чата"
            },
            "accessor_user_id": {
              "type": "integer",
              "description": "user_id пользователя, запросившего смену описания (обязательно берем ТОЛЬКО из JSON сообщения)"
            }
          },
          "additionalProperties": false
        }
      }
    },

    {
      "type": "function",
      "function": {
        "name": "change_chat_name",
        "description": "Меняет название чата",
        "strict": true,
        "parameters": {
          "type": "object",
          "required": ["name", "accessor_user_id"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Новое название чата"
            },
            "accessor_user_id": {
              "type": "integer",
              "description": "user_id пользователя, запросившего смену названия (обязательно берем ТОЛЬКО из JSON сообщения)"
            }
          },
          "additionalProperties": false
        }
      }
    },

    {
      "type": "function",
      "function": {
        "name": "pin_message",
        "description": "Закрепляет сообщение в чате",
        "strict": true,
        "parameters": {
          "type": "object",
          "required": ["message_id", "accessor_user_id"],
          "properties": {
            "message_id": {
              "type": "integer",
              "description": "message_id сообщения, которое следует закрепить"
            },
            "accessor_user_id": {
              "type": "integer",
              "description": "user_id пользователя, запросившего закрепление сообщения (обязательно берем ТОЛЬКО из JSON сообщения)"
            }
          },
          "additionalProperties": false
        }
      }
    },

    {
      "type": "function",
      "function": {
        "name": "kick_user",
        "description": "Исключает участника чата",
        "strict": true,
        "parameters": {
          "type": "object",
          "required": ["accessor_user_id", "user_id"],
          "properties": {
            "accessor_user_id": {
              "type": "integer",
              "description": "user_id пользователя, запросившего исключение (обязательно берем ТОЛЬКО из JSON сообщения)"
            },
            "user_id": {
              "type": "integer",
              "description": "user_id пользователя, которого следует исключить (берем из ответа на сообщение)"
            }
          },
          "additionalProperties": false
        }
      }
    }
  ]
}
